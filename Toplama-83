using System;

class Program
{
    static void Main()
    {

        int toplam = 0;
        int girilenSayi;

        while (true)
        {
            Console.Write("Say覺 girin: ");
            string girilenMetin = Console.ReadLine();

            if (int.TryParse(girilenMetin, out girilenSayi))
            {
                toplam += girilenSayi;
            }
           
            if (girilenSayi == 83)
            {

                break;
            }
        }

        Console.WriteLine($"Girilen say覺lar覺n toplam覺: {toplam-83}");
        Console.ReadLine();
    }
}
